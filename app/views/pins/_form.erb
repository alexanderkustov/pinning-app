    <label><%= pluralize(@errors.count, "error") %> prohibited this pin from being saved:</label>
    <ul>
      <% @errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@pin, multipart: true) do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
  <div class="form-group">
    <label for="pin_title">Title</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class-"form-group">
    <label for="pin_slug" class="control-label">Slug</label>
    <%= f.text_field :slug, class: "form-control" %>
  </div>

  <div class-"form-group">
    <label for="pin_category" class="control-label">Category</label>
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "form-control"}) %>
  </div>

  <div class-"form-group">
    <label for="pin_url" class="control-label">URL</label>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class-"form-group">
    <label for="pin_text" class="control-label">Text</label>
    <%= f.text_area :text, class: "form-control", rows: "3" %>
  </div>

  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-primary btn-block" %>
  </div>

  <div class="form-group">
  <label for="pin_image" class="control-label">Image</label>
  <%= f.file_field :image, class: "input-group" %>
  </div>

<% end %>
